@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4>Crear una cuenta en el Banking.</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-5">
                    <h4>Datos del Login</h4>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-7">
                    <h4>Datos Personales</h4>
                    <div class="form-group">
                        <label asp-for="Input.DNI"></label>
                        <input asp-for="Input.DNI" class="form-control" />
                        <span asp-validation-for="Input.DNI" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-6 form-group">
                            <label asp-for="Input.Name"></label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="col-6 form-group">
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 form-group">
                            <label asp-for="Input.Phone"></label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                        <div class="col-8 form-group">
                            <label asp-for="Input.HomeAddress"></label>
                            <input asp-for="Input.HomeAddress" class="form-control" />
                            <span asp-validation-for="Input.HomeAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            <button type="submit" class="btn btn-block btn-success">Crear Cuenta</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
