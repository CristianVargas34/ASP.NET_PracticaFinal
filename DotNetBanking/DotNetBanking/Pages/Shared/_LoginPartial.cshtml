@using Microsoft.AspNetCore.Identity

@inject SignInManager<Banking.Core.User> SignInManager
@inject UserManager<Banking.Core.User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-info text-light">Logout 🔒</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link btn btn-info text-light" style="margin-right: 5px" id="register" asp-area="Identity" asp-page="/Account/Register">Register ✒️</a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-info text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login 🔑</a>
    </li>
}
</ul>
