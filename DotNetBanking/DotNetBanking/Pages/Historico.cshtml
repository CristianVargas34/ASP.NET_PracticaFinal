@page
@model DotNetBanking.Pages.HistoricoViewModel

@{
    ViewData["Title"] = "Historico";
}

<h1>Historico</h1>

<p>
    <a asp-page="Create">Historico</a>
</p>

<form  method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input class="form-control" type="date" name="filter" asp-for="DateSort" asp-format="{0:yyyy-MM-ddTHH:mm}" />
            <input type="submit" value="Buscar" class="btn btn-primary" /> |
            <a asp-page="Historico">Mostrar Todo</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Numero de Cuenta
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transaction[0].Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-page="Index" class="card-link btn btn-primary">Inicio</a>

